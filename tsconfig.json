{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ES2015",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
    "types": [],
    "typeRoots": [],
    "paths": {
      "~*": ["./src/*"],
      "~assets/*": ["./dist/assets/generated/*"]
    }
  },
  "include": [
    "lib",
    "src",
    "types",
    "./types/*.d.ts",
    "node_modules/@types/node/events.d.ts",
    "node_modules/@types/node/util.d.ts",
    "node_modules/react-native/types/index.d.ts"
  ],
  "exclude": ["**/*.test.ts"]
}
